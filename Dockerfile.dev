# Development Dockerfile
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies first
COPY package.json ./
RUN npm install

# Copy source code
COPY . .

# Expose development port
EXPOSE 5173

# Start development server with proper configuration
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]